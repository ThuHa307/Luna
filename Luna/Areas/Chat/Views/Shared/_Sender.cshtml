@using Luna.Areas.Chat.Models
@model ConversationVM
@{
    string senderId = (string)ViewData["senderId"];
}
<ul class="list-unstyled mb-0">
    @foreach (var user in ConversationVM.Users)
    {
        var isActive = user.Id == senderId ? "active" : "";
        <li class="p-2 border-bottom chat-item @isActive">
            <a asp-area="Chat" asp-controller="Staff" asp-action="Conversation" asp-route-userid="@user.Id"
                class="d-flex justify-content-between">
                <div class="d-flex flex-row">
                    <div>
                        <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                             alt="avatar" class="d-flex align-self-center me-3" width="60">
                        <span class="badge bg-success badge-dot"></span>
                    </div>
                    <div class="pt-1">
                        <p class="fw-bold mb-0">@user.UserName</p>
                        <p class="small text-muted">Hello, Are you there?</p>
                    </div>
                </div>
            </a>
        </li>
    }

</ul>
