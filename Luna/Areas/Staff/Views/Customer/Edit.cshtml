@model Customer
@{
    var orderId = Model.OrderId;
    var roomId = Model.RoomId;
}
<div class="container">
    <partial name="_StatusMessage" for="@ViewData["StatusMessage"]" />
    <form method="post">
        <input asp-for="CustomerId" hidden />
        <input asp-for="OrderId" hidden />
        <input asp-for="RoomId" hidden />
        <div class="border p-3 mt-4">
            <div class="row pb-2">
                <h2 class="text-primary">Edit Customer</h2>
                <hr />
            </div>
            <div class="mb-3">
                <label asp-for="CusName"></label>
                <input asp-for="CusName" class="form-control" />
                <span asp-validation-for="CusName" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Cccd"></label>
                <input asp-for="Cccd" class="form-control" />
                <span asp-validation-for="Cccd" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" class="form-control" type="date" />
                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Genre"></label>
                <input asp-for="Genre" class="form-control" />
                <span asp-validation-for="Genre" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary" style="width:150px">Update</button>
            <a asp-controller="DemoRO" asp-action="ConfirmCI" asp-route-orderId="@orderId" asp-route-roomId="@roomId"
               class="btn btn-outline-primary border" style="width:250px">
                Back to list
            </a>
        </div>
    </form>
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}

