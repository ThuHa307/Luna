@using Luna.Models
@model List<RoomOrder>

<div class="container">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary bg-gradient m-lg-0 py-3">
            <div class="row">
                <div class="col-12 text-center">
                    <h2 class="text-white py-2">Room Order</h2>
                </div>
            </div>
        </div>
        <div class="card-body p-4">
            <div class="container">

                <div class="row pt-4 pb-3">
                    <div class="col-6">
                        <h2 class="text-primary">Room Order List</h2>
                    </div>
                </div>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr>
                            <th>Order Id</th>
                            <th>Room Id</th>
                            <th>Check in</th>
                            <th>Check out</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderId</td>
                                <td>@item.RoomId</td>
                                <td>@item.CheckIn</td>
                                <td>@item.CheckOut</td>
                                <td>
                                    @if (item.CheckOut == null)
                                    {
                                        <a asp-controller="DemoRO" asp-action="ConfirmCI" asp-route-orderId="@item.OrderId" asp-route-roomId="@item.RoomId" class="btn btn-primary mx-2">
                                            Confirm CheckIn
                                        </a>
                                    }
                                    
                                    @if (item.CheckIn != null && item.CheckOut == null)
                                    {
                                        <a asp-controller="DemoRO" asp-action="ConfirmCO" asp-route-orderId="@item.OrderId" asp-route-roomId="@item.RoomId" class="btn btn-danger mx-2">
                                            Confirm CheckOut
                                        </a>
                                    }

                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>