@model Luna.Models.RoomImage

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1 style="color: #FEA116; display: flex; justify-content: center;">Delete RoomImage</h1>
<h3 style="color: red; display: flex; justify-content: center;">Are you sure you want to delete this?</h3>
<div class="row justify-content-center">
    <div class="col-md-4" style="margin: 20px;">
        <form asp-action="Delete">
            <table style="width: 100%;border-collapse: separate;border-spacing: 0 10px;margin: 20px 0;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Link)
                    </th>
                    <td>
                        <img src="@Model.Link" alt="Image" style="width:100px;height:auto;" />
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Type.TypeId)
                    </td>
                </tr>
            </table>
            <div class="mt-3">
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;&nbsp;&nbsp;
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </form>
    </div>
</div>
