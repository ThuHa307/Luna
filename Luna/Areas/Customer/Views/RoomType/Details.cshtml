@model Luna.Models.RoomType

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>RoomType</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TypeName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypePrice)
        </dt>
        <dd class = "col-sm-10">
            @($"{Model.TypePrice:N0} ₫")
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TypeImg)
        </dt>
        <dd class = "col-sm-10">
            <img src="@Model.TypeImg" alt="Image" style="width:100px;height:auto;" />
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.TypeId" class="btn btn-primary">Edit</a> 
    <a asp-action="Index" class="btn btn-dark">Back to List</a>
</div>
