@model Luna.Models.RoomType

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color: #FEA116;display: flex; justify-content: center;">Details RoomType</h1>
<div class="row justify-content-center">
    <div class="col-md-4">
            <table style="width: 150%;border-collapse: separate;border-spacing: 0 10px;margin: 20px 0;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TypeName)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.TypeName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TypePrice)
                    </th>
                    <td>
                         @($"{Model.TypePrice:N0} ₫")
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Description)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TypeImg)
                    </th>
                    <td>
                        <img src="@Model.TypeImg" alt="Image" style="width:100px;height:auto;" />
                    </td>
                </tr>
            </table>
            <div class="mt-3">
            <a asp-action="Edit" asp-route-id="@Model?.TypeId" class="btn btn-primary">Edit</a>
            <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
    </div>
</div>