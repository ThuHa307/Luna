@* @model IEnumerable<Luna.Models.RoomType> *@
@model X.PagedList.IPagedList<Luna.Models.RoomType>;
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles {
    <style type="text/css">
        /*   them style cho pagination*/
        .product-pagination {
            text-align: center;
        }

        .product-pagination,
        .blog__pagination {
            padding-top: 10px;
        }

            .product-pagination a,
            .blog__pagination a {
                display: inline-block;
                width: 30px;
                height: 30px;
                border: 1px solid #b2b2b2;
                font-size: 14px;
                color: #b2b2b2;
                font-weight: 700;
                line-height: 28px;
                text-align: center;
                margin-right: 16px;
                -webkit-transition: all, 0.3s;
                -moz-transition: all, 0.3s;
                -ms-transition: all, 0.3s;
                -o-transition: all, 0.3s;
                transition: all, 0.3s;
            }

                .product-pagination a:hover,
                .blog__pagination a:hover {
                    background: #7fad39;
                    border-color: #7fad39;
                    color: #ffffff;
                }

                .product-pagination a:last-child,
                .blog__pagination a:last-child {
                    margin-right: 0;
                }
    </style>
}
<h1>Manage RoomType</h1>
<div class="row">
    <div class="col-md-6">
        <form method="get" asp-action="Index">
            <input type="text" name="search" value="@ViewData["CurrentSearch"]" placeholder="Search by TypeId..." />
            <input type="submit" value="Search" />
        </form>
    </div>
    <div class="col-md-6">
        <a asp-action="Index" class="btn btn-primary">Back to Full List</a>
    </div>
</div>
<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
               @*  @Html.DisplayNameFor(model => model.TypeName) *@
                TypeName
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.TypePrice) *@
                TypePrice
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.Description) *@
                Description
            </th>
            <th>
                @* @Html.DisplayNameFor(model => model.TypeImg) *@
                TypeImg
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TypeName)
            </td>
          @*   <td>
                    @Html.DisplayFor(modelItem => @item.TypePrice)
            </td> *@
            <td>
                @($"{item.TypePrice:N0} ₫")
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
         @*    <td>
                @Html.DisplayFor(modelItem => item.TypeImg)
            </td> *@
            
            <td>
                <img src="@item.TypeImg" alt="Image" style="width:100px;height:auto;" />
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TypeId" class="btn btn-dark">Edit</a> 
                <a asp-action="Details" asp-route-id="@item.TypeId" class="btn btn-warning">Details</a> 
                <a asp-action="Delete" asp-route-id="@item.TypeId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div class="product-pagination">
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
</div>