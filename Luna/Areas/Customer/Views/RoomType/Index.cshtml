@* @model IEnumerable<Luna.Models.RoomType> *@
@model X.PagedList.IPagedList<Luna.Models.RoomType>;
@using X.PagedList.Mvc.Core;
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container-xxl py-5">
    <div class="container">
        <div class="text-center wow fadeInUp" data-wow-delay="0.1s">
            <h6 class="section-title text-center text-primary text-uppercase">Management RoomType</h6>
            <h1 class="mb-5"><span class="text-primary text-uppercase">Admin</span> View Room</h1>
        </div>
        <div class="row g-4" style="justify-content:center;">
            <div class="col-md-4">
                <form method="get" asp-action="Index">
                    <input type="text" name="search" value="@ViewData["CurrentSearch"]" placeholder="Search by TypeName..." style="font-size: 20px; width:80%;" />
                    <input type="submit" value="Search" style="font-size: 20px;" />
                </form>
            </div>
            <div class="col-md-4">
                <a asp-action="Index" class="btn btn-primary">Back to Full List</a>
            </div>
        </div>
        <p>
            <a asp-action="Create" class="btn btn-success">Create New</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @*  @Html.DisplayNameFor(model => model.TypeName) *@
                        TypeName
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.TypePrice) *@
                        TypePrice
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.Description) *@
                        Description
                    </th>
                    <th>
                        @* @Html.DisplayNameFor(model => model.TypeImg) *@
                        TypeImg
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.TypeName)
                        </td>
                        @*   <td>
                    @Html.DisplayFor(modelItem => @item.TypePrice)
                    </td> *@
                        <td>
                            @($"{item.TypePrice:N0} ₫")
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        @*    <td>
                    @Html.DisplayFor(modelItem => item.TypeImg)
                    </td> *@

                        <td>
                            <img src="@item.TypeImg" alt="Image" style="width:100px;height:auto;" />
                        </td>
                        <td style="display:inline-flex;">
                            <a asp-action="Edit" asp-route-id="@item.TypeId" class="btn btn-dark">Edit</a> &nbsp; &nbsp
                            <a asp-action="Details" asp-route-id="@item.TypeId" class="btn btn-warning">Details</a>&nbsp;&nbsp
                            <a asp-action="Delete" asp-route-id="@item.TypeId" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="pagedList">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>
    </div>
</div>
