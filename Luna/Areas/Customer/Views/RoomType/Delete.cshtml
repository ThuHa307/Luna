@model Luna.Models.RoomType

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color: #FEA116;display: flex; justify-content: center;">Delete RoomType</h1>
<h3 style="color: red;display: flex; justify-content: center;">Are you sure you want to delete this?</h3>
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Delete">
            <table style="width: 150%;border-collapse: separate;border-spacing: 0 10px;margin: 20px 0;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TypeName)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.TypeName)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TypePrice)
                    </th>
                    <td>
                        @($"{Model.TypePrice:N0} ₫")
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Description)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.TypeImg)
                    </th>
                    <td>
                        <img src="@Model.TypeImg" alt="Image" style="width:100px;height:auto;" />
                    </td>
                </tr>
            </table>
            <div class="mt-3">
                <input type="hidden" asp-for="TypeId" />
                <input type="submit" value="Delete" class="btn btn-danger" /> &nbsp;&nbsp;&nbsp;
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
        </form>
    </div>
</div>