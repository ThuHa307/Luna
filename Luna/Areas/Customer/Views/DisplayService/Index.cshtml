@model IEnumerable<Luna.Models.Service>

@{
    ViewData["Title"] = "Index";

    int pageSize = ViewBag.PageSize;
 
}
<div class="text-center wow fadeInUp mt-4" data-wow-delay="0.1s">
	<h6 class="section-title text-center text-primary text-uppercase">Our Service</h6>
	<h1 class="mb-5">Explore Our <span class="text-primary text-uppercase">Service </span></h1>
</div>
<hr />
<div class="inn-body-section pad-bot-50 container">
	<div class="container">
		<div class="row container">
			
			<!--SERVICES SECTION-->
			<div class="col-md-12 container-sm mt-auto">
				@foreach (var item in Model)
				{
					<div class="row mt-5">
						<img src="@item.ServiceImg" class="col-md-4" alt="">
						<div class="col-md-8">
							<h3>@item.ServiceName</h3> <span class="blog-date">Date: July 12, 2024  | </span> <span class="blog-author">Author: Kiokinte</span>
							<p>@item.Description</p>
							<p>Being a business entity, we firmly prioritize service quality and customer friendliness in all our endeavors. We believe this commitment not only serves as our foundation but also fosters strong and enduring relationships with our valued customers.</p>
							<p>Let us, a dedicated and professional business, demonstrate this to you. We pledge to deliver the finest service and consistently prioritize customer satisfaction because we understand that quality and friendliness are the keys to driving mutual trust and success.</p>
							<a href="Customer/Room/Room" class="btn btn-outline-danger">Order Now</a>
						</div>
					</div>
				}
			</div>
			<nav aria-label="Page navigation example">
				<ul class="pagination justify-content-center">
					@for (int i = 1; i <= Math.Ceiling((double)ViewBag.TotalServices / pageSize); i++)
					{
						<li class="page-item @(ViewBag.CurrentPage == i ? "active" : "")">
							<a class="page-link" href="/Customer/DisplayService/Index?pageNumber=@i">@i</a>
						</li>
					}
				</ul>
			</nav>
			<!--END SERVICES SECTION-->
		</div>
	</div>
</div>