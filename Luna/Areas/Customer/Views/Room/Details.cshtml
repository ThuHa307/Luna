@model Luna.Models.Room

@{
    ViewData["Title"] = "Details";
}

<h1 style="color: #FEA116; display: flex; justify-content: center;">Details Room</h1>
<div class="row justify-content-center">
    <div class="col-md-4" style="margin: 20px;">
            <table style="width: 100%;border-collapse: separate;border-spacing: 0 10px;margin: 20px 0;">
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RoomStatus)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.RoomStatus)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.IsActive)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.IsActive)
                    </td>
                </tr>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Type)
                    </th>
                    <td>
                        @Html.DisplayFor(model => model.Type.TypeId)
                    </td>
                </tr>
            </table>
            <div class="mt-3">
                <a asp-action="Edit" asp-route-id="@Model?.RoomId" class="btn btn-primary">Edit</a>
                <a asp-action="Index" class="btn btn-dark">Back to List</a>
            </div>
    </div>
</div>
