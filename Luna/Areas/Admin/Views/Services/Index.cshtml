@model IEnumerable<Luna.Models.Service>

@{
    ViewData["Title"] = "Service";
}

<h1>Service</h1>

<p>
    <a asp-action="Create"><button type="button" class="btn btn-success">Create new service</button></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServicePrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th class="w-25 h-25">
                @Html.DisplayNameFor(model => model.ServiceImg)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServicePrice)
            </td>
            <td>
                @item.IsActive
            </td>
            <td>
                <img src="@item.ServiceImg" class="img-thumbnail w-25 h-25" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" class="btn btn-primary" asp-route-id="@item.ServiceId">Edit</a> 
                <a asp-action="Details" class="btn btn-info" asp-route-id="@item.ServiceId">Details</a> 
                <a asp-action="Delete" class="btn btn-danger"  asp-route-id="@item.ServiceId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
