@model ApplicationUser

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>User Details</h2>

<div class="card" style="padding: 1rem;>
    <div>
        <h4>@Model.UserName</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                User ID
            </dt>
            <dd class="col-sm-10">
                @Model.Id
            </dd>
            <dt class="col-sm-2">
                FullName
            </dt>
            <dd class="col-sm-10">
                @Model.FullName
            </dd>
            <dt class="col-sm-2">
                Email
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                Phone Number
            </dt>
            <dd class="col-sm-10">
                @Model.PhoneNumber
            </dd>
            <dt class="col-sm-2">
                Address
            </dt>
            <dd class="col-sm-10">
                @Model.Address
            </dd>
            <dt class="col-sm-2">
                Date of birth
            </dt>
            <dd class="col-sm-10">
                @String.Format("{0:dd/MM/yyyy}", Model.DateOfBirth)
            </dd>
        </dl>
    </div>

    <div>
        <a asp-action="Edit" class="btn btn-secondary" asp-route-id="@Model.Id">Edit</a>
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</div>

